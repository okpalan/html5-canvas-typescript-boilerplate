{
  "compilerOptions": {
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declarationDir": "dist/@types",
    "typeRoots": [
      "src/@types"
    ],
    "declaration": true,
    "target": "ES2015",
    "experimentalDecorators": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2015"
    ],
    "allowJs": true,
    "rootDir": "src",
    "composite": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "./node_modules",
    "dist"
  ]
}